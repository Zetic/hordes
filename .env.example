# Environment Configuration
NODE_ENV=development

# Discord Bot Configuration
DISCORD_TOKEN=your_discord_bot_token_here
DISCORD_CLIENT_ID=your_discord_client_id_here
DISCORD_ATTACK_REPORT_CHANNEL_ID=your_channel_id_for_attack_reports

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/die2nite_bot
REDIS_URL=redis://localhost:6379

# Game Configuration
GAME_START_TIME=21:00
HORDE_START_TIME=20:00
HORDE_DURATION_MINUTES=60

# Horde System Configuration
INITIAL_HORDE_SIZE=10
HORDE_SCALING_FACTOR=1.2
HORDE_SCALING_RANDOMNESS=0.3

# Admin Configuration
ADMIN_PASSWORD=your_secret_admin_password_here

